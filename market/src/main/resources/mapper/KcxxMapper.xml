  <select id="kcxxWithProdata" resultMap="kcxxWithPro">
	SELECT
		k.proid,
		k.pname,
		k.num,
		p.price,
		p.inprice,
		p.reledate,
		p.protype,
		p.supname,
		DATEDIFF(p.reledate,NOW()) as days
	FROM
		kcxx k,
		product p 
	WHERE
		k.proid = p.proid 
		AND DATEDIFF(p.reledate,NOW()) &lt; 50
